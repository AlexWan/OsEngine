        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Envelops" Height="239" Width="310" WindowStartupLocation="CenterScreen" Style="{StaticResource WindowStyleNoResize}" ResizeMode="NoResize" Icon="/Images/OsLogo.ico" Topmost="True">
