        <WindowsFormsHost x:Name="HostColorDown" Height="22" Margin="154,46,20,0" VerticalAlignment="Top"/>
        <TextBox Name="TextBoxDeviation" Height="23" Margin="154,73,20,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
