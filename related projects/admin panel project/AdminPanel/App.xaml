                                    <DoubleAnimation.To>
                                        <system:Double>14</system:Double>
                                    </DoubleAnimation.To>
                                </DoubleAnimation>
                                <DoubleAnimation Duration="0:0:0.1" Storyboard.TargetName="center" Storyboard.TargetProperty="(Ellipse.Width)">
