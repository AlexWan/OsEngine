<Window x:Class="AdminPanel.Entity.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminPanel.Entity"
        mc:Ignorable="d"
        Title="Input" Height="170" Width="250" Style="{StaticResource WindowStyleNoResize}" WindowStartupLocation="CenterScreen">
    <Grid Margin="5" Background="#151A1E">
        <Label Name="InputLabel" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Content="Enter a code"/>
        <TextBox Name="TbCode" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="150" Margin="0,50,0,0"/>
        <Button Content="Ok" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="100" Click="ButtonBase_OnClick" Margin="0,90,0,0"/>
    </Grid>
</Window>
