<Window x:Class="OsEngine.Market.Connectors.ConnectorCandlesUi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data flow connection" Height="664" Width="420" Style="{StaticResource WindowStyleNoResize}" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/Images/OsLogo.ico">
    <Grid>
        <Rectangle Margin="5,146,5,40" />


        <Rectangle Margin="5,61,5,0" Height="80" VerticalAlignment="Top" />


        <Rectangle Margin="5,5,5,0" Height="51" VerticalAlignment="Top" />

        <Label Name="Label1" Content="Server" HorizontalAlignment="Left" Margin="41,19,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxTypeServer" Margin="206,19,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="184"/>

        <Label Name="Label3" Content="Portfolio for operations" HorizontalAlignment="Left"  Margin="41,84,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxPortfolio" Margin="206,84,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="184"/>

        <Label Name="Label6" Content="Classes displayed" HorizontalAlignment="Left" Margin="41,188,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxClass" Margin="206,188,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="184"/>

        <Label Name="Label7" Content="Security" HorizontalAlignment="Left" Margin="41,215,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxSecurities" Margin="206,215,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="184"/>

        <Label Name="LabelTimeFrame" Content="TimeFrame" HorizontalAlignment="Left" Margin="41,296,0,0" VerticalAlignment="Top" Width="78"/>
        <ComboBox x:Name ="ComboBoxTimeFrame" Margin="206,296,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="184"  />

        <CheckBox x:Name="CheckBoxIsEmulator" Content="Execute trades in the emulator" HorizontalAlignment="Left" Margin="120,112,0,0" ToolTip="Сделки будут сведены в рамках платформы и в рынок выставлены не будут" VerticalAlignment="Top"/>

        <Label Name="Label8" Content="From what we collect candles" HorizontalAlignment="Left" Margin="41,242,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name ="ComboBoxCandleMarketDataType" Margin="206,242,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="184" />

        <CheckBox x:Name="CheckBoxSetForeign" Content="Build non-trading candles" HorizontalAlignment="Left" Margin="120,349,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxCountTradesInCandle" HorizontalAlignment="Left" Height="23" Margin="206,324,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="184"/>

        <Button x:Name="ButtonAccept" Content="Accept" HorizontalAlignment="Right" Margin="0,0,5,10" VerticalAlignment="Bottom" Width="130" Click="ButtonAccept_Click"/>
        <Label Name="LabelCountTradesInCandle" Content="Trades count in candle" HorizontalAlignment="Left" Margin="41,324,0,0" VerticalAlignment="Top"/>
        <Label Name="Label9" Content="Candle type" HorizontalAlignment="Left" Margin="41,269,0,0" VerticalAlignment="Top" />
        <ComboBox x:Name ="ComboBoxCandleCreateMethodType" Margin="206,269,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="184"  />
        <Label Name="Label2" Content="Order execution" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
        <Label Name="Label5" Content="Candles settings" HorizontalAlignment="Left" Margin="10,154,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
        <Label x:Name="LabelVolumeToClose" Content="Volume to close" HorizontalAlignment="Left" Margin="41,402,0,0" VerticalAlignment="Top" />
        <TextBox x:Name ="TextBoxVolumeToClose" Margin="206,402,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="184"  />
        <Label x:Name="LabelRencoPunkts" Content="Move to close" HorizontalAlignment="Left" Margin="41,432,0,0" VerticalAlignment="Top" />
        <TextBox x:Name ="TextBoxRencoPunkts" Margin="206,432,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="184"  />
        <Label x:Name="LabelDeltaPeriods" Content="Change delta to close" HorizontalAlignment="Left" Margin="41,372,0,0" VerticalAlignment="Top" />
        <TextBox x:Name ="TextBoxDeltaPeriods" Margin="246,372,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="144"  />
        <CheckBox x:Name="CheckBoxRencoIsBuildShadows" Content="Build shadows" HorizontalAlignment="Left" Margin="120,462,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelRangeCandlesPunkts" Content="Size" HorizontalAlignment="Left" Margin="41,483,0,0" VerticalAlignment="Top" />
        <TextBox x:Name ="TextBoxRangeCandlesPunkts" Margin="206,483,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="184"  />
        <Label x:Name="LabelReversCandlesPunktsMinMove" Content="Min movement" HorizontalAlignment="Left" Margin="41,513,0,0" VerticalAlignment="Top" />
        <TextBox x:Name ="TextBoxReversCandlesPunktsMinMove" Margin="206,513,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="184"  />
        <Label x:Name="LabelReversCandlesPunktsBackMove" Content="Rollback" HorizontalAlignment="Left" Margin="41,543,0,0" VerticalAlignment="Top" />
        <TextBox x:Name ="TextBoxReversCandlesPunktsBackMove" Margin="206,543,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="184"  />


    </Grid>
</Window>
