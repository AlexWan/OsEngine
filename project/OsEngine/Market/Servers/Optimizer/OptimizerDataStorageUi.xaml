<Window x:Class="OsEngine.Market.Servers.Optimizer.OptimizerDataStorageUi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Optimizer data storage" Height="501" Width="833" MinWidth="670" Style="{StaticResource WindowStyleNoResize}" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen" Icon="/Images/OsLogo.ico">
    <Grid Width="825">

        <Grid.RowDefinitions>
            <RowDefinition Height="458"/>
        </Grid.RowDefinitions>
        <Rectangle Margin="5,5,5,5"/>
        <TabControl Margin="10,10,12,10">
            <TabItem Name="Label22" Header="Broadcast data" FontSize="14">
                <Grid >
                    <WindowsFormsHost x:Name="HostSecurities" Foreground="Black" Margin="0,71,0,0"/>
                    <ComboBox x:Name="ComboBoxSets" Margin="365,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="255"/>
                    <Label Name="Label28" Content="Sets" HorizontalAlignment="Left" Margin="323,5,0,0" VerticalAlignment="Top" />
                    <ComboBox x:Name="ComboBoxDataType" HorizontalAlignment="Left" Margin="114,35,0,0" VerticalAlignment="Top" Width="178"/>
                    <Label Name="Label25" Content="Translation type" HorizontalAlignment="Left" Margin="9,35,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="ButtonSetDataFromPath" Content="Find in folder" Margin="626,4,10,0" VerticalAlignment="Top" Click="ButtonSetDataFromPath_Click"/>
                    <TextBox x:Name="TextBoxDataPath" Margin="323,35,9,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <ComboBox x:Name="ComboBoxDataSourseType" HorizontalAlignment="Left" Margin="95,5,0,0" VerticalAlignment="Top" Width="197"/>
                    <Label Name="Label24" Content="Source" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top"  />
                </Grid>
            </TabItem>
            <TabItem Name="Label23" Header="Logging" FontSize="14">
                <Grid >
                    <WindowsFormsHost x:Name="Host" Foreground="Black" Margin="0,10,0,0" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
