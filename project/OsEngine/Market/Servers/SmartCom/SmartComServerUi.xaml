        <Rectangle Margin="5,5,5,37"/>
        <TextBox Name="TextBoxServerAdress" HorizontalAlignment="Left" Height="23" Margin="79,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="153"/>
        <TextBox Name="TextBoxServerPort" HorizontalAlignment="Left" Height="23" Margin="79,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="153"/>
        <TextBox Name="TextBoxUserName" Height="23" Margin="454,14,15,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <PasswordBox Name="TextBoxUserPassword" Height="23" Margin="454,42,15,0" VerticalAlignment="Top"/>
        <Label Name="LabelAdress" Content="Адрес" HorizontalAlignment="Left" Margin="21,15,0,0" VerticalAlignment="Top"/>
        <Label Name="LabelPort" Content="Порт" HorizontalAlignment="Left" Margin="21,43,0,0" VerticalAlignment="Top"/>
        <Label Name="LabelNameUser" Content="Имя пользователя" HorizontalAlignment="Left" Margin="332,15,0,0" VerticalAlignment="Top"/>
        <Label Name="LabelPassword" Content="Пароль" HorizontalAlignment="Left" Margin="332,43,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ButtonConnect" Content="Подключить" HorizontalAlignment="Right" Margin="0,0,160,10" VerticalAlignment="Bottom" Width="120" Click="ButtonConnect_Click"/>
