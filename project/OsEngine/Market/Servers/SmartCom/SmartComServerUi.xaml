        <Label x:Name="LabelStatus" Content="Disconnect" HorizontalAlignment="Left" Margin="148,71,0,0" VerticalAlignment="Top"/>
        <WindowsFormsHost x:Name="Host" Margin="15,93,15,42"/>
    </Grid>
</Window>

