<Window x:Class="OsEngine.PrimeSettings.PrimeSettingsMasterUi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OsEngine.PrimeSettings"
        mc:Ignorable="d"
              Title="Configuration" Style="{StaticResource WindowStyleNoResize}" Height="447" Width="404" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="/Images/OsLogo.ico">
    <Grid>
        <ComboBox Name="ComboBoxLocalization" Margin="196,10,56,0" VerticalAlignment="Top" Height="23"/>
        <Label Name="LanguageLabel" Content="Language" HorizontalAlignment="Left" Margin="79,10,0,0" VerticalAlignment="Top"/>

        <ComboBox Name="ComboBoxTimeFormat" Margin="196,33,56,0" VerticalAlignment="Top" Height="23"/>
        <Label Name="LabelTimeFormat" Content="Time format" HorizontalAlignment="Left" Margin="79,33,0,0" VerticalAlignment="Top"/>

        <ComboBox Name="ComboBoxDateFormat" Margin="196,56,56,0" VerticalAlignment="Top" Height="23"/>
        <Label Name="LabelDateFormat" Content="Date format" HorizontalAlignment="Left" Margin="79,56,0,0" VerticalAlignment="Top"/>

        <ComboBox Name="ComboBoxMemoryCleanUp" Margin="196,79,56,0" VerticalAlignment="Top" Height="23"/>
        <Label Name="LabelMemoryCleanUp" Content="Memory clean up" HorizontalAlignment="Left" Margin="79,79,0,0" VerticalAlignment="Top"/>

        <Label Name="LabelHeader" Content="Bot header" HorizontalAlignment="Left" Margin="80,102,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TextBoxBotHeader" HorizontalAlignment="Left" Margin="197,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"/>

        <CheckBox Name="CheckBoxExtraLogWindow" Margin="0,130,56,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="23" />
        <Label Name="ShowExtraLogWindowLabel" Content="Show emergency log window" HorizontalAlignment="Left" Margin="79,130,0,0" VerticalAlignment="Top"/>

        <CheckBox Name="CheckBoxExtraLogSound" Margin="0,158,56,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="23"/>
        <Label Name="ExtraLogSound" Content="Emergency log sound" HorizontalAlignment="Left" Margin="79,158,0,0" VerticalAlignment="Top"/>

        <CheckBox Name="CheckBoxTransactionSound" Margin="0,186,56,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="23"/>
        <Label Name="TransactionSoundLabel" Content="Transaction sound" HorizontalAlignment="Left" Margin="79,186,0,0" VerticalAlignment="Top"/>

        <Label Name="LabelRebootTradeUiLigth" Content="Reboot Ligth on error" HorizontalAlignment="Left" Margin="79,213,0,0" VerticalAlignment="Top"/>
        <CheckBox Name="CheckBoxRebootTradeUiLigth" Margin="0,213,56,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="23"/>

        <Label Name="LabelReportCriticalErrors" Content="Report critical errors" HorizontalAlignment="Left" Margin="79,241,0,0" VerticalAlignment="Top"/>
        <CheckBox Name="CheckBoxReportCriticalErrors" Margin="0,241,56,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="23"/>

        <TextBox Name="TextBoxMessageToUsers" IsReadOnly="True" Margin="40,280,40,0" TextWrapping="Wrap" Text="Support our common Open Source project and it will become better." VerticalAlignment="Top" Height="56" />
        <Label Name="LabelSupportGroupRu" Content="Support group RU:" HorizontalAlignment="Left" Margin="47,350,0,0" VerticalAlignment="Top"/>
        <Label Name="LabelSupportGroupEng" Content="Support group ENG:" HorizontalAlignment="Left" Margin="47,378,0,0" VerticalAlignment="Top"/>
        <Button Name="ButtonGoInRuSupport" Content="Go to" HorizontalAlignment="Right" Margin="0,344,40,0" VerticalAlignment="Top" Width="142" Click="ButtonGoInRuSupport_Click"/>
        <Button Name="ButtonGoInEngSupport" Content="Go to" HorizontalAlignment="Right" Margin="0,374,40,0" VerticalAlignment="Top" Width="142" Click="ButtonGoInEngSupport_Click"/>

    </Grid>
</Window>
