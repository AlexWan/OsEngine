<Window x:Class="OsEngine.OsData.SetDuplicationUi"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          Title="Set dublication" Width="509" Height="Auto" SizeToContent="Height" MinHeight="200" Icon="/Images/OsLogo.ico" Style="{StaticResource WindowStyleNoResize}" ResizeMode="NoResize" Topmost="True">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Верхний Rectangle -->
        <Rectangle Grid.Row="0"/>
        <!-- Контролы в верхнем Rectangle -->
        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Name="RegimeLabel" Content="Regime" Grid.Column="0" 
                   VerticalAlignment="Center" Height="27" Width="65"/>

            <ComboBox Name="ComboBoxRegime" Grid.Column="1" 
                      HorizontalAlignment="Left" VerticalAlignment="Center" 
                      Width="80" Height="31" Margin="10,0,0,0" SelectionChanged="RegimeChanged">
                <ComboBoxItem Content="Off" IsSelected="True"/>
                <ComboBoxItem Content="On"/>
            </ComboBox>

            <Label Name="StatusLabel" Content="First, turn on the On mode in the set!" HorizontalAlignment="Left" Grid.Column="1" 
                   VerticalAlignment="Top" Height="28" Width="233" Margin="179,8,0,0"/>

        </Grid>

        <!-- Средний Rectangle -->
        <Rectangle Grid.Row="2"/>
        <!-- Контролы в среднем Rectangle -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Name="CurFolderLabel" Content="Current folder name for set dublication" 
                   Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Grid Grid.Row="1" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Name="PathForSetTextBox" Grid.Column="0" 
                          Text=""  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" TextWrapping="NoWrap"/>

                <Button Name="NewPathButton" Content="Choose folder" Grid.Column="1" 
                        VerticalAlignment="Center" Margin="10,0,0,0" 
                        Width="103" Click="NewPathButton_Click"/>
            </Grid>
        </Grid>

        <!-- Нижний Rectangle -->
        <Rectangle Grid.Row="4"/>
        <!-- Контролы в нижнем Rectangle -->
        <Grid Grid.Row="4" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Name="NowButton" Content="Dublicate now" Grid.Column="0" VerticalAlignment="Center" Width="120" Click="NowButton_Click"/>
            <Label Name="EveryLabel" Content="Every" Grid.Column="2" VerticalAlignment="Center" Margin="20,0,0,0"/>

            <ComboBox Name="ComboBoxPeriods" Grid.Column="3" 
                      VerticalAlignment="Center" Width="80" Height="31" 
                      Margin="10,0,0,0">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="5" IsSelected="True"/>
                <ComboBoxItem Content="30"/>
            </ComboBox>

            <Label Name="MinutsLabel" Content="minutes" Grid.Column="4" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </Grid>
    </Grid>
</Window>
