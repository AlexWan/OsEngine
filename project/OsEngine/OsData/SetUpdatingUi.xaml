<Window x:Class="OsEngine.OsData.SetUpdatingUi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set update" Width="300" Height="Auto" SizeToContent="Height" MinHeight="180" Icon="/Images/OsLogo.ico" Style="{StaticResource WindowStyleNoResize}" ResizeMode="NoResize" Topmost="True">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="125"/>
        </Grid.RowDefinitions>

        <!-- Верхний Rectangle -->
        <Rectangle Grid.Row="0"/>
        <!-- Контролы в верхнем Rectangle -->
        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Name="RegimeLabel" Content="Regime" Grid.Column="0" 
                   VerticalAlignment="Center" Height="28" Width="65" Grid.ColumnSpan="2" Margin="10,0,203,0"/>

            <ComboBox Name="ComboBoxRegime" Grid.Column="1" 
                      HorizontalAlignment="Left" VerticalAlignment="Center" 
                      Width="79" Height="32" Margin="186,0,0,0" SelectionChanged="RegimeChanged" >
                <ComboBoxItem Content="Off" IsSelected="True"/>
                <ComboBoxItem Content="On"/>
            </ComboBox>

        </Grid>

        <!-- Нижний Rectangle -->
        <Rectangle Grid.Row="2"/>
        <!-- Контролы в нижнем Rectangle -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Rectangle HorizontalAlignment="Center" Height="33" Margin="0,10,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="278"/>

            <Label Name="PeriodLabel" Content="Update period:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0"/>

            <RadioButton Name="DayRBut" Content="Day" HorizontalAlignment="Left" Margin="10,19,0,0" VerticalAlignment="Top" Foreground="#FFFF8100" Background="White" Grid.Row="1" IsChecked="True" Height="21" Width="47" Checked="DayRBut_Checked"/>
            <Label Name="UpdTimeLabel" Content="Update time:" HorizontalAlignment="Left" Margin="70,15,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <ComboBox Name="TimeBox" HorizontalAlignment="Left" Margin="190,14,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Height="24"/>

            <RadioButton Name="HourRBut" Content="Hour" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Foreground="#FFFF8100" Background="Transparent" Grid.Row="1" Checked="HourRBut_Checked"/>

            <Grid Grid.Row="1" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>

    </Grid>

</Window>
