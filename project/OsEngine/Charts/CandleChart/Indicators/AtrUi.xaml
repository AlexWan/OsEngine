        <Button x:Name="ButtonColorAdx" Content="Цвет" Height="22" FontSize="14" FontFamily="Calibri" HorizontalAlignment="Left" Margin="19,48,0,0" VerticalAlignment="Top" Width="120" Click="ButtonColor_Click"  />
