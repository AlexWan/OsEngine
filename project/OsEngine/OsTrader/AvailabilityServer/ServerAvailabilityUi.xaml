<Window x:Class="OsEngine.OsTrader.ServerAvailability.ServerAvailabilityUi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OsEngine.OsTrader.ServerAvailability"
        mc:Ignorable="d"
        Title="Server availability" Height="200" Width="500" MinHeight="200" MinWidth="400" Icon="/Images/OsLogo.ico" Style="{StaticResource WindowStyleCanResize}" ResizeMode="CanResize" WindowStartupLocation="CenterScreen" >
    <Grid Name="GridConnectorPing">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>

        <CheckBox Name="CheckBoxTrackPing" Content="Track the ping" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" Height="23" Width="140"/>
        <Label Name="LabelRefreshRate" Content="Ping interval. Seconds" HorizontalAlignment="Left" Margin="160,8,0,0" Width="160" HorizontalContentAlignment="Center" VerticalAlignment="Top"/>
        <ComboBox Name="TextBoxRefreshRate" HorizontalAlignment="Left" Margin="320,8,0,0" VerticalAlignment="Top" Width="60"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <WindowsFormsHost Grid.Column="0" Margin="1" Name="HostActiveConnections"/>

            <WindowsFormsHost Grid.Column="2" Margin="1" Name="HostPingValues"/>
        </Grid>
    </Grid>
</Window>
