<Window x:Class="OsEngine.OsTrader.ClientManagement.Gui.ClientRobotSourcesUi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OsEngine.OsTrader.ClientManagement.Gui"
        mc:Ignorable="d"
                Title="Robot sources" Height="460" Width="462" MinWidth="490" MinHeight="200" Style="{StaticResource WindowStyleCanResize}" WindowStartupLocation="CenterScreen" Icon="/Images/OsLogo.ico">
    <Grid Name="GridPrime">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle Margin="0,0,0,0"/>
        <TabControl Name="TabControlSettings" Margin="5,66,5,5">

            <TabItem Name="TabItemCommonSettings" Header=" Common ">
                <Grid >
                    <Label Content="Server num" HorizontalAlignment="Left" Margin="75,37,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="TextBoxServerNum" HorizontalAlignment="Left" Margin="211,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161"/>
                    
                    <Label Content="Commission type" HorizontalAlignment="Left" Margin="75,75,0,0" VerticalAlignment="Top"/>
                    <ComboBox Name="ComboBoxCommissionType" HorizontalAlignment="Left" Margin="211,75,0,0" VerticalAlignment="Top" Width="161"/>

                    <Label Content="Commission value" HorizontalAlignment="Left" Margin="75,103,0,0" VerticalAlignment="Top"/>
                    <TextBox Name="TextBoxCommissionValue" HorizontalAlignment="Left" Margin="211,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161"/>
                    
                    <Label Content="Collect candles type" HorizontalAlignment="Left" Margin="75,131,0,0" VerticalAlignment="Top"/>
                    <ComboBox Name="ComboBoxCandleMarketDataType" HorizontalAlignment="Left" Margin="211,131,0,0" VerticalAlignment="Top" Width="162"/>
                    
                    <CheckBox Name="CheckBoxSaveTradesInCandle" Content="Save trades in candle" HorizontalAlignment="Left" Margin="211,159,0,0" VerticalAlignment="Top"/>
                    
                    <Label Content="Time Frame" HorizontalAlignment="Left" Margin="75,187,0,0" VerticalAlignment="Top"/>
                    <ComboBox Name="ComboBoxTimeFrame" HorizontalAlignment="Left" Margin="211,187,0,0" VerticalAlignment="Top" Width="162"/>
                </Grid>
            </TabItem>

            <TabItem Name="TabItemSecurities" Header=" Securities ">
                <Grid >
                    <WindowsFormsHost Name="HostSecurities"  Margin="0,0,0,0"/>
                </Grid>
            </TabItem>

            <TabItem Name="TabItemPairSettings" Header=" Pairs settings ">
                <Grid >
                    <WindowsFormsHost Name="HostPairSettings"  Margin="0,0,0,0"/>
                </Grid>
            </TabItem>

            <TabItem Name="TabItemIndexSettings" Header=" Index settings ">
                <Grid >
                    <WindowsFormsHost Name="HostIndexSettings"  Margin="0,0,0,0"/>
                </Grid>
            </TabItem>

        </TabControl>
        <Label Name="LabelRobotSource" Content="Selected robot" HorizontalAlignment="Left" Margin="64,10,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="ComboBoxSources" HorizontalAlignment="Left" Margin="187,38,0,0" VerticalAlignment="Top" Width="182"/>
        <Label Name="LabelRobotType" Content="Source " HorizontalAlignment="Left" Margin="64,38,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TextBoxSelectedRobot" IsEnabled="False" HorizontalAlignment="Left" Margin="187,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="181"/>

    </Grid>
</Window>