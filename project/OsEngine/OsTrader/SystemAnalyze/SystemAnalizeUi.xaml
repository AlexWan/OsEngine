<Window x:Class="OsEngine.OsTrader.SystemAnalyze.SystemAnalyzeUi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OsEngine.OsTrader.SystemAnalyze"
        mc:Ignorable="d"
        Title="System analyze ui" Height="476" Width="573" MinHeight="400" MinWidth="550" Icon="/Images/OsLogo.ico" Style="{StaticResource WindowStyleCanResize}" ResizeMode="CanResize" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Rectangle Margin="2,2,2,2"/>
        <Label Content="RAM" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="23" Width="36"/>
        <CheckBox Name="CheckBoxRamCollectDataIsOn" Content="Collect data" HorizontalAlignment="Left" Margin="86,10,0,0" VerticalAlignment="Top"/>
        <Button  Name="ButtonOpenRamFile" Content="Go to file" HorizontalAlignment="Left" Margin="210,8,0,0" VerticalAlignment="Top" Width="104"/>
        <WindowsFormsHost Name="HostRam" Margin="10,40,10,10"/>
        <Label Name="LabelSavePeriodRam" Content="Save period" HorizontalAlignment="Right" Margin="0,10,135,0" VerticalAlignment="Top"/>
        <ComboBox Name="ComboBoxSavePeriodRam" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120"/>

        <Rectangle  Margin="2,2,2,2" Grid.Row="1"/>
        <CheckBox Name="CheckBoxCpuCollectDataIsOn" Content="Collect data" HorizontalAlignment="Left" Margin="86,10,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Button Name="ButtonOpenCpuFile" Content="Go to file" HorizontalAlignment="Left" Margin="210,8,0,0" VerticalAlignment="Top" Width="104" Grid.Row="1"/>
        <Label Content="CPU" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="23" Width="36" Grid.Row="1"/>
        <WindowsFormsHost Name="HostCpu" Margin="10,40,10,10" Grid.Row="1"/>
        <Label Name="LabelSavePeriodCpu" Content="Save period" HorizontalAlignment="Right" Margin="0,10,135,0" VerticalAlignment="Top" Grid.Row="1"/>
        <ComboBox Name="ComboBoxSavePeriodCpu" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" Grid.Row="1"/>


    </Grid>
</Window>
