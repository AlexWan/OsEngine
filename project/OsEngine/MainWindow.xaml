<Window x:Class="OsEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main menu" Style="{StaticResource WindowStyleNoResize}" Height="430" Width="625" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="Images/OsLogo.ico">
    <Grid>
        <Grid Name="MainContentGrid">
            <Rectangle Margin="429,7,10,0" Height="205" VerticalAlignment="Top" />
            <Rectangle Margin="222,7,202,0" Height="205" VerticalAlignment="Top" />
            <Rectangle Margin="10,7,409,0" Height="205" VerticalAlignment="Top" />
            <Button  Name="ButtonRobot" Content="Bot Station" Margin="448,138,0,0" VerticalAlignment="Top" Click="ButtonRobotCandleOne_Click" HorizontalAlignment="Left" Width="146" Height="28" />
            <Button  Name="ButtonTester" Content="Tester" Margin="248,105,0,0" VerticalAlignment="Top" Click="ButtonTesterCandleOne_Click" HorizontalAlignment="Left" Width="146" Height="28"   />
            <Button  Name="ButtonData" Content="Data" Margin="37,105,0,0" VerticalAlignment="Top" Click="ButtonData_Click" HorizontalAlignment="Left" Width="146" Height="28" />
            <Button  Name="ButtonCandleConverter" Content="Candle Converter" HorizontalAlignment="Left" Margin="37,172,0,0" VerticalAlignment="Top" Width="145" Click="CandleConverter_Click"/>
            <Button  Name="ButtonConverter" Content="Converter" Margin="37,138,0,0" VerticalAlignment="Top" Click="ButtonConverter_Click" Height="28" HorizontalAlignment="Left" Width="146" />
            <Button  Name="ButtonOptimizer" Content="Optimizer" Margin="248,171,0,0" VerticalAlignment="Top" Click="ButtonOptimizer_Click" HorizontalAlignment="Left" Width="146" Height="28"  />
            <Label Name="BlockDataLabel" Content="Work with data" HorizontalAlignment="Left" HorizontalContentAlignment="Center"  Margin="12,64,0,0" VerticalAlignment="Top" Width="202" Height="36" FontSize="28" Foreground="#FFA7A8AA"/>
            <Label Name="BlockTestingLabel" Content="Testing" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="223,64,0,0" VerticalAlignment="Top" Width="197" FontSize="28" Foreground="#FFA7A8AA" Height="36"/>
            <Label Name="BlockTradingLabel" Content="Trading" HorizontalAlignment="Left" HorizontalContentAlignment="Center"  Margin="430,64,0,0" VerticalAlignment="Top"  FontSize="28" Foreground="#FFA7A8AA" Height="36" Width="182"/>
            <Image Name="ImageData" HorizontalAlignment="Left" Source="Images/MainWIndow/test.png" Height="60" Margin="292,7,0,0" VerticalAlignment="Top" Width="60"/>
            <Image Name="ImageTests" HorizontalAlignment="Left" Source="Images/MainWIndow/data.png" Height="68" Margin="76,7,0,0" VerticalAlignment="Top" Width="68"/>
            <Image Name="ImageTrading" HorizontalAlignment="Left" Source="Images/MainWIndow/Trading.png" Height="85" Margin="484,0,0,0" VerticalAlignment="Top" Width="85"/>
            <Rectangle Margin="10,220,10,10"/>
            <Button Name="ButtonSettings" HorizontalAlignment="Left" Margin="268,231,0,0" VerticalAlignment="Top" Width="100" Height="28" Click="ButtonSettings_Click">
                <Image Name="ImageGear" HorizontalAlignment="Left" Source="Images/MainWIndow/gear.png" Width="24" Height="24"/>
            </Button>
            <Button  Name="ButtonTesterLight" Content="Tester Light" Margin="249,138,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="146" Height="28" Click="ButtonTesterLight_Click"   />
            <Button  Name="ButtonRobotLight" Content="Bot Station Light" Margin="448,171,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="146" Height="28" Click="ButtonRobotLight_Click" />
            <Image Name="ImagePadlock" HorizontalAlignment="Left" Source="/Images/padlockClosed.png" Height="60" Margin="292,7,0,0" VerticalAlignment="Top" Width="60"/>
            <Button Name="ButtonLocal_Ru" Margin="518,232,0,0" VerticalAlignment="Top" Height="24" Click="ButtonLocal_Click" HorizontalAlignment="Left" Width="37">
                <Image Name="ImageFlag_Ru" Height="27" Source="/Images/MainWIndow/flag_ru.png" Width="30"/>
            </Button>
            <Button Name="ButtonLocal_Eng" Margin="557,232,0,0" VerticalAlignment="Top" Height="24" Click="ButtonLocal_Eng_Click" HorizontalAlignment="Left" Width="37">
                <Image Name="ImageFlag_Eng" Width="30" Height="27" Source="/Images/MainWIndow/flag_eng.png"/>
            </Button>
        </Grid>
        <Grid Name="VideoGrid" VerticalAlignment="Top" Height="120" Margin="0,271,0,0">
            <Grid Width="570" HorizontalAlignment="Center" Margin="0,0,0,25">
                <!-- Видео -->
                <MediaElement Name="GifT"
                      Source="Images/MainWIndow/tbank.mp4"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Manual"
                      MediaEnded="GifT_MediaEnded"
                      IsMuted="True"
                      Stretch="UniformToFill">
                    <MediaElement.Clip>
                        <RectangleGeometry Rect="0,0,570,95" RadiusX="25" RadiusY="25"/>
                    </MediaElement.Clip>
                </MediaElement>

                <!-- Рамка -->
                <Border Name="VideoBorder"
                CornerRadius="25"
                BorderThickness="1"
                BorderBrush="#1c2228"
                Background="Transparent"
                />
            </Grid>
        </Grid>
    </Grid>
</Window>