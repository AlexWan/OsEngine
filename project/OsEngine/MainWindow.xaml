<Window x:Class="OsEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:user="clr-namespace:OsEngine.OsTrader.Gui"
        xmlns:user1="clr-namespace:OsEngine.OsData"
        xmlns:user2="clr-namespace:OsEngine.OsConverter"
        Title="OS.Engine"  MinHeight="800" MinWidth="1450" Height="800" Width="1450" Style="{StaticResource WindowStyleCanResize}" WindowStartupLocation="CenterScreen" Icon="Images/OsLogo.ico">
    <Grid>
        <TabControl  BorderThickness="0" Margin="0,-64,0,0">
            <TabItem Header="Тестер"  Width="70" Height="60" Margin="0,96,0,-143">
                <user:TesterUi x:Name="TesterUi" Margin="62,0,-5,-3"/>
            </TabItem>
            <TabItem Header="Трейдер" Width="70" Height="60"  Margin="-70,152,70,-210" >
                <user:RobotUi x:Name="RobotUi" Margin="62,0,-5,-3"/>
            </TabItem>
            <TabItem Header="Данные" Width="70" Height="60"  Margin="-140,214,140,-270" >
                <user1:OsDataUi x:Name="OsDataUi" Margin="62,0,-5,-3"/>
            </TabItem>
            <TabItem Header="Конвертер" Width="70" Height="60"  Margin="-210,283,210,-323"  >
                <user2:OsConverterUi x:Name="c" Margin="62,0,-5,-3"/>

            </TabItem>
        </TabControl>
        <Rectangle Fill="#FCEE21" Height="174" Stroke="Black" StrokeThickness="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="20" RenderTransformOrigin="0.5,0.5" Margin="2,0,0,46">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="44"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-12.012"/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label x:Name="LabelOsa" Content="O-S-A.NET" Foreground="Black" Margin="-28,0,0,131" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" FontSize="14" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="80">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

    </Grid>

</Window>

